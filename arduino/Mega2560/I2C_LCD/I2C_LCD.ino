#include <Wire.h>
#include <LiquidCrystal_I2C.h>
//*===========================================*
//定義區
//*===========================================*
//====================================
//I2C LCD定義區
//====================================
#define pin_SDA 20
#define pin_SCL 21
//==============================
  LiquidCrystal_I2C lcd(0x27,16,2);
//*===========================================*
//初始化區
//*===========================================*
void setup() {
  Serial.begin(9600);
  lcd.init();
  lcd.clear();
  lcd.backlight();    

}
//*===========================================*

//*===========================================*
//主程式區
//*===========================================*
void loop() {
  showOnLcd(1,"Hello,world! 10 ");
  showOnLcd(2,"ggg!"); 
}
//*===========================================*

//*===========================================*
//函式區
//*===========================================*
//====================================
//show on LCD
//====================================
void showOnLcd(int row,char *information) {     
      char buf[16];
      int col=0;      
      for (col=0;col<16;col++){
          buf[col]=' ';
          lcd.setCursor(col,row-1);
          if(information[col] != '\0'){            
            lcd.print(information[col]);
          }else{
            lcd.print(buf[col]);           
          }               
      }         
}
